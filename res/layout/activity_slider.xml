<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SliderActivity" >

    <TextView
        android:id="@+id/titreSlider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/titre_slider" 
        android:textSize="@dimen/title_size"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/descriptionSlider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titreSlider"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/description_slider" />

    <SeekBar
        android:id="@+id/sliderDistanceVille"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descriptionSlider"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/distanceVille"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
  		android:layout_centerHorizontal="true"
        android:layout_below="@+id/sliderDistanceVille"
        android:layout_marginTop="16dp"
        android:text="@string/distance" />

    <Button
        android:id="@+id/buttonValiderDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/distanceVille"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="@string/valide_distance" />



</RelativeLayout>
